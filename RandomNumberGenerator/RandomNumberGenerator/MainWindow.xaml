<Window x:Class="RandomNumberGenerator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RandomNumberGenerator"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525" MinHeight="350" MinWidth="525">
    <StackPanel Margin="50">
        <Label>Enter a number.</Label>
        <TextBox Height="50" TextAlignment="Center" FontSize="20" Name="number_tb"></TextBox>
        <Button Width="160" Height="30" Margin="0, 10, 0, 10" Name="gen_btn" Click="gen_btn_Click" >Generate Random Number</Button>
        <TextBlock Name="result_tbl" Width="400" Height="90" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="50" TextAlignment="Center"></TextBlock>
    </StackPanel>
</Window>
